{
  "name": "artemis-native",
  "productName": "Artemis Solver",
  "version": "2.0.0",
  "description": "High-Performance Heuristic Key Derivation Engine",
  "main": "dist-electron/main.js",
  "author": "Artemis Dev <dev@artemis.example>",
  "homepage": "https://example.local/",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.electron.json && vite build && npm run verify:kernel && electron-builder",
    "build:linux": "cross-env TARGET=linux tsc -p tsconfig.electron.json && vite build && npm run verify:kernel && electron-builder --linux deb",
    "verify:kernel": "node -e \"const fs = require('fs'); const path = require('path'); const file = path.join(__dirname, 'dist-electron/miner-kernel.js'); if (!fs.existsSync(file)) { console.error('ERROR: miner-kernel.js not found at', file); process.exit(1); } console.log('âœ“ miner-kernel.js verified:', fs.statSync(file).size, 'bytes');\n\"",
    "start:coordinator": "node ./tools/coordinator.js",
    "start:worker": "node ./tools/remote-worker.js",
    "build:unique": "node scripts/build-unique.js"
  },
  "build": {
    "appId": "com.artemis.solver",
    "productName": "Artemis Native",
    "directories": {
      "output": "release-build"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*"
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/tiny-secp256k1/**/*",
      "**/node_modules/keccak/**/*",
      "**/node_modules/systeminformation/**/*",
      "dist-electron/miner-kernel.js",
      "dist-electron/**/*.node"
    ],
    "linux": {
      "target": [
        "deb"
      ],
      "asarUnpack": [
        "dist-electron/**/*",
        "**/node_modules/tiny-secp256k1/**/*",
        "**/node_modules/keccak/**/*",
        "**/node_modules/systeminformation/**/*"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "dependencies": {
    "bip39": "^3.1.0",
    "dexie": "^4.0.1",
    "ethers": "^6.11.1",
    "js-sha3": "^0.9.3",
    "keccak": "^3.0.4",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "systeminformation": "^5.21.22",
    "tiny-secp256k1": "^2.2.3",
    "sql.js": "^1.8.0",
    "ws": "^8.13.0"
  },
  "optionalDependencies": {
    "better-sqlite3": "^8.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^39.2.6",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^7.2.7",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  }
}
