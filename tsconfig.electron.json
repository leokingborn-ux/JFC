{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist-electron",
    "noEmit": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "isolatedModules": false,
    "allowImportingTsExtensions": false,
    "lib": ["ESNext"],
    "target": "ES2022",
    "types": ["node"]
  },
  "include": ["electron"],
  "exclude": ["src", "dist", "release", "node_modules"]
}